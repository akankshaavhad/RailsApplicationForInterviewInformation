<div class="login">
  <div class="container">
  
    <h1>Sign up</h1>
  <form class="form">
    <%= form_for(@user) do |f| %>
      <div class="form-group">
      <%= f.text_field :firstname, :placeholder => "First name" %></div>
      <div class="form-group">
      <%= f.text_field :lastname, :placeholder => "Last name" %></div>
      <div class="form-group">
      <%= f.text_field :username, :placeholder => "User name" %></div>
      <div class="form-group">
      <%= f.email_field :emailid, :placeholder => "Email" %><br></div>
      <%= f.password_field :password, :placeholder => "Password" %><br>
      <%= f.submit "Create an account", class:"btn-default" %>
    <% end %>
</form>
  
  
  </div>
</div>